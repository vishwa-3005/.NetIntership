@model List<StudentManagement.Models.Student>

<html>
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <style>
        .myElement {
            color: blue;
            transition: color 0.3s;
            /* Smooth transition for the color change */
            cursor:pointer;
        }

            .myElement:hover {
                color: red; /* Color changes to red on hover */
            }

    </style>
</head>
    <body>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">STudent Id</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            @foreach(var item in Model)
            {
             
                <tr>
                    <th>@item.StudentId</th>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    
                    <td>
                        <a href="/Home/EditStudent/@item.StudentId" class="btn btn-success">Edit</a>
                    </td>
                    <td>
                        <a href="/Home/DeleteStudent/@item.StudentId" class="btn btn-danger">Delete</a>
                    </td>
                    <td>
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Courses
                            </button>
                            <ul class="dropdown-menu">
                                
                                @foreach(var course in @item.Courses){
                                

                                    <li class="myElement" style="padding:2px; margin:auto; text-align:left;">
                                         @course.CourseName
                                    </li>
                                }
                                
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </body>
</html>
